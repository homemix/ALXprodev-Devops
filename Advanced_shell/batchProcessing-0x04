#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_BASE="https://pokeapi.co/api/v2/pokemon"

mkdir -p pokemon_data
> errors.txt

# Function to fetch a Pokémon with timeout protection
fetch_with_timeout() {
    local name="$1"
    echo "Fetching data for $name..."

    # Start curl in the background
    curl -s --fail "${API_BASE}/${name}" -o "pokemon_data/${name}.json" &
    pid=$!

    # Allow 10 seconds for the process
    (sleep 10 && kill "$pid" 2>/dev/null && echo "Timeout fetching $name" >> errors.txt) &
    watchdog=$!

    # Wait for curl to finish
    wait "$pid"
    status=$?

    # Kill watchdog if curl finished first
    kill "$watchdog" 2>/dev/null

    if [ $status -eq 0 ]; then
        echo "Saved data to pokemon_data/${name}.json"
    else
        echo "Failed to fetch $name" >> errors.txt
    fi
}

# Run all in parallel
for name in "${POKEMONS[@]}"; do
    fetch_with_timeout "$name" &
done

wait
echo -e "\nAll Pokémon fetch tasks completed."
